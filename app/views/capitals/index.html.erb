<h1>
  <div class="row">
    <div class="col-md-10 page-title">
      <%= t('activerecord.models.capital.other') %> <small><%= t('crud.title.index') %></small>
    </div>
    <div class="col-md-2">
      <%= link_to new_capital_path, class: 'btn btn-primary', role: 'button' do %>
        <span class="glyphicon glyphicon-plus"></span> <%= t('crud.actions.new') %>
      <% end %>
    </div>
  </div>
</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th class="col-md-1">ID</th>
      <th><%= t('activerecord.attributes.capital.name') %></th>
      <th colspan="3" class="col-md-3"><%= t('crud.title.actions') %></th>
    </tr>
  </thead>

  <tbody>
    <% @capitals.each do |capital| %>
      <tr>
        <td><%= capital.id %></td>
        <td><%= capital.name %></td>
        <td>
          <%= link_to capital do %>
            <span class="glyphicon glyphicon-info-sign blue"></span> <%= t('crud.actions.show') %>
          <% end %>
        </td>
        <td>
          <%= link_to edit_capital_path(capital) do %>
            <span class="glyphicon glyphicon-pencil blue"></span> <%= t('crud.actions.edit') %>
          <% end %>
        </td>
        <td>
          <%= render 'delete_modal', capital: capital %>
          <a href="#" rel="nofollow" data-toggle="modal" data-target="#delete-modal-<%= capital.id%>">
            <span class="glyphicon glyphicon-trash blue"></span> <%= t('crud.actions.destroy') %>
          </a>
        </td>
     </tr>
    <% end %>
  </tbody>
</table>

<% unless @capitals.present? %>
  <div class="no-results">
    <p class="bg-info"><%= t('crud.empty') %></p>
  </div>
<% end %>

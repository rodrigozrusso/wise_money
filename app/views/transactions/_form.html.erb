    <%= f.label :status %><br>
    <%= f.select :status, [[ t('helpers.select.prompt') , nil ]] | TransactionStatus.to_a %>
  </div>
  <div class="field">
    <%= f.label :total %><br>
    <%= f.text_field :total %>
  </div>
  <div class="field">
    <%= f.label :checked_at %><br>
    <%= f.datetime_select :checked_at %>
  </div>
  <div class="field">
    <%= f.label :income_capital_id %><br>
    <%= f.text_field :income_capital_id %>
  </div>
  <div class="field">
    <%= f.label :expense_capital_id %><br>
    <%= f.text_field :expense_capital_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

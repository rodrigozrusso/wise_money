<h1>
  <div class="row">
    <div class="col-md-10 page-title">
      <%= t('activerecord.models.transaction.other') %> <small><%= t('crud.title.index') %></small>
    </div>
    <div class="col-md-2">
      <%= link_to new_transaction_path, class: 'btn btn-primary', role: 'button' do %>
        <span class="glyphicon glyphicon-plus"></span> <%= t('crud.actions.new') %>
      <% end %>
    </div>
  </div>
</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th class="col-md-1">ID</th>
      <th><%= t('activerecord.attributes.transaction.description') %></th>
      <th><%= t('activerecord.attributes.transaction.status') %></th>
      <th><%= t('activerecord.attributes.transaction.total') %></th>
      <th><%= t('activerecord.attributes.transaction.checked_at') %></th>
      <th><%= t('activerecord.attributes.transaction.income_capital') %></th>
      <th><%= t('activerecord.attributes.transaction.expense_capital') %></th>
      <th colspan="3" class="col-md-3"><%= t('crud.title.actions') %></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.id %></td>
        <td><%= transaction.description %></td>
        <td><%= transaction.status_humanize %></td>
        <td><%= transaction.total %></td>
        <td><%= transaction.checked_at %></td>
        <td><%= transaction.income_capital %></td>
        <td><%= transaction.expense_capital %></td>
        <td>
          <%= link_to transaction do %>
            <span class="glyphicon glyphicon-info-sign blue"></span> <%= t('crud.actions.show') %>
          <% end %>
        </td>
        <td>
          <%= link_to edit_transaction_path(transaction) do %>
            <span class="glyphicon glyphicon-pencil blue"></span> <%= t('crud.actions.edit') %>
          <% end %>
        </td>
        <td>
          <%= render 'delete_modal', transaction: transaction %>
          <a href="#" rel="nofollow" data-toggle="modal" data-target="#delete-modal-<%= transaction.id%>">
            <span class="glyphicon glyphicon-trash blue"></span> <%= t('crud.actions.destroy') %>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% unless @transactions.present? %>
  <div class="no-results">
    <p class="bg-info"><%= t('crud.empty') %></p>
  </div>
<% end %>
